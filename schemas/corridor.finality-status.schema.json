{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/corridor.finality-status.schema.json",
  "title": "MEZ Corridor Finality Status",
  "description": "Computed finality status for a corridor head. This is an output schema used by tooling and APIs; it is not a VC by default. Finality levels are defined in finality-level.schema.json.",
  "type": "object",
  "required": [
    "type",
    "corridor_id",
    "as_of",
    "finality_level",
    "receipt_count",
    "final_state_root",
    "head_commitment_digest_sha256"
  ],
  "properties": {
    "type": {
      "const": "MEZCorridorFinalityStatus"
    },
    "corridor_id": {
      "type": "string"
    },
    "as_of": {
      "type": "string",
      "format": "date-time"
    },
    "receipt_count": {
      "type": "integer",
      "minimum": 0
    },
    "final_state_root": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "mmr_root": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "head_commitment_digest_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "finality_level": {
      "$ref": "https://schemas.momentum-ez.org/mez/finality-level.schema.json"
    },
    "evidence": {
      "type": "object",
      "properties": {
        "checkpoint": {
          "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
        },
        "watcher_quorum": {
          "type": "object",
          "properties": {
            "required_count": { "type": "integer", "minimum": 0 },
            "confirmed_count": { "type": "integer", "minimum": 0 },
            "quorum_met": { "type": "boolean" },
            "watcher_ids": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        },
        "anchors": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
          }
        },
        "disputes": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
          }
        }
      },
      "additionalProperties": false
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
