{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-sez.org/msez/corridor.schema.json",
  "title": "MSEZ Corridor Manifest",
  "type": "object",
  "required": [
    "corridor_id",
    "settlement",
    "recognition",
    "attestations",
    "definition_vc_path"
  ],
  "properties": {
    "corridor_id": {
      "type": "string"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "settlement": {
      "type": "object"
    },
    "recognition": {
      "type": "object"
    },
    "attestations": {
      "type": "object"
    },
    "dispute_resolution": {
      "type": "object"
    },
    "trust_anchors_path": {
      "type": "string"
    },
    "key_rotation_path": {
      "type": "string"
    },
    "definition_vc_path": {
      "type": "string",
      "description": "Path to a signed Corridor Definition VC binding corridor.yaml + security artifacts (hashes) to this corridor_id."
    },
    "agreement_vc_path": {
      "description": "Optional path(s) to signed Corridor Agreement VC(s) for participant-specific instantiation.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "verification_ruleset": {
      "type": "string",
      "description": "Ruleset identifier for corridor verification."
    }
  }
}
