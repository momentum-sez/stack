{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-sez.org/msez/transition.payload.trade.bol.issue.v1.schema.json",
  "title": "BOL Issue transition payload (v1)",
  "description": "Issues a Bill of Lading. The BOL MAY be embedded (bol) or referenced as an artifact (bol_ref).",
  "type": "object",
  "oneOf": [
    {"required": ["bol"]},
    {"required": ["bol_ref"]}
  ],
  "properties": {
    "bol": {
      "$ref": "https://schemas.momentum-sez.org/msez/trade.bill-of-lading.v1.schema.json"
    },
    "bol_ref": {
      "$ref": "https://schemas.momentum-sez.org/msez/artifact-ref.schema.json"
    },
    "issued_by_party_id": {
      "type": "string",
      "description": "Optional issuer identifier (typically carrier or agent)."
    },
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
