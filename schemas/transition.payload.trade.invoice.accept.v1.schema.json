{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-sez.org/msez/transition.payload.trade.invoice.accept.v1.schema.json",
  "title": "Trade Invoice Accept transition payload (v1)",
  "description": "Accepts (acknowledges) an issued trade invoice. The invoice MAY be referenced by invoice_id or by invoice_ref.",
  "type": "object",
  "oneOf": [
    {"required": ["invoice_id"]},
    {"required": ["invoice_ref"]}
  ],
  "required": ["accepted_by_party_id", "accepted_at"],
  "properties": {
    "invoice_id": {"type": "string", "minLength": 1},
    "invoice_ref": {"$ref": "https://schemas.momentum-sez.org/msez/artifact-ref.schema.json"},
    "accepted_by_party_id": {"type": "string", "minLength": 1},
    "accepted_at": {"type": "string", "format": "date-time"},
    "status": {"type": "string", "enum": ["accepted", "disputed"], "default": "accepted"},
    "dispute_reason": {"type": "string"},
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
