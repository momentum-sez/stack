{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://momentum-sez.org/schemas/stack.lock.schema.json",
  "title": "MSEZ Stack Lockfile",
  "type": "object",
  "required": [
    "stack_spec_version",
    "generated_at",
    "zone_id",
    "profile",
    "modules",
    "corridors"
  ],
  "properties": {
    "stack_spec_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "zone_id": {
      "type": "string"
    },
    "profile": {
      "type": "object",
      "required": [
        "profile_id",
        "version"
      ],
      "properties": {
        "profile_id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "module_id",
          "version",
          "variant",
          "manifest_sha256"
        ],
        "properties": {
          "module_id": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "variant": {
            "type": "string"
          },
          "params": {
            "type": "object",
            "additionalProperties": true
          },
          "manifest_sha256": {
            "type": "string"
          },
          "content_sha256": {
            "type": "string"
          },
          "provides": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      }
    },
    "overlays": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "module_id",
          "patches_sha256"
        ],
        "properties": {
          "module_id": {
            "type": "string"
          },
          "patches_sha256": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "corridors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "corridor_id"
        ],
        "properties": {
          "corridor_id": {
            "type": "string"
          },
          "trust_anchors_sha256": {
            "type": "string"
          },
          "key_rotation_sha256": {
            "type": "string"
          }
        }
      }
    }
  }
}