{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/transition.payload.trade.bol.endorse.v1.schema.json",
  "title": "BOL Endorse transition payload (v1)",
  "description": "Endorses/transfers BOL title to a new party.",
  "type": "object",
  "oneOf": [
    {"required": ["bol_id"]},
    {"required": ["bol_ref"]}
  ],
  "required": ["from_party_id", "to_party_id", "endorsed_at"],
  "properties": {
    "bol_id": {"type": "string", "minLength": 1},
    "bol_ref": {"$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"},
    "from_party_id": {"type": "string", "minLength": 1},
    "to_party_id": {"type": "string", "minLength": 1},
    "endorsed_at": {"type": "string", "format": "date-time"},
    "endorsement_type": {"type": "string", "enum": ["blank", "to-order"], "default": "to-order"},
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
