{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.node-capability.schema.json",
  "title": "MEZ Node Capability Attestation VC",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "proof"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "object"
        ]
      },
      "minItems": 1
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "contains": {
        "const": "VerifiableCredential"
      }
    },
    "id": {
      "type": "string"
    },
    "issuer": {
      "type": [
        "string",
        "object"
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "node_id",
        "zone_id",
        "capabilities"
      ],
      "properties": {
        "node_id": {
          "type": "string"
        },
        "zone_id": {
          "type": "string"
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": true
        },
        "software": {
          "type": "object",
          "additionalProperties": true
        },
        "hardware": {
          "type": "object",
          "additionalProperties": true
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Optional evidence blobs/refs (e.g., remote attestation reports)."
        }
      },
      "additionalProperties": true
    },
    "proof": {
      "type": "object",
      "required": [
        "type",
        "created",
        "proofPurpose",
        "verificationMethod",
        "jws"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "proofPurpose": {
          "type": "string"
        },
        "verificationMethod": {
          "type": "string"
        },
        "jws": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
