{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/regpack.sanctions-snapshot.schema.json",
  "title": "MEZ RegPack Sanctions Snapshot",
  "description": "A point-in-time snapshot of consolidated sanctions lists (OFAC, EU, UN, etc.).",
  "type": "object",
  "required": [
    "type",
    "stack_spec_version",
    "snapshot_id",
    "snapshot_timestamp",
    "sources"
  ],
  "properties": {
    "type": {
      "const": "MEZSanctionsSnapshot"
    },
    "stack_spec_version": {
      "type": "string",
      "minLength": 1
    },
    "snapshot_id": {
      "type": "string",
      "pattern": "^sanctions-[0-9]{4}-[0-9]{2}-[0-9]{2}(-.+)?$",
      "description": "Unique snapshot identifier (e.g., 'sanctions-2026-01-15')"
    },
    "snapshot_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp when this snapshot was created"
    },
    "sources": {
      "type": "object",
      "properties": {
        "ofac_sdn": {
          "$ref": "#/$defs/sanctions_source"
        },
        "ofac_sectoral": {
          "$ref": "#/$defs/sanctions_source"
        },
        "eu_consolidated": {
          "$ref": "#/$defs/sanctions_source"
        },
        "un_consolidated": {
          "$ref": "#/$defs/sanctions_source"
        },
        "uk_consolidated": {
          "$ref": "#/$defs/sanctions_source"
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/sanctions_source"
      }
    },
    "consolidated": {
      "type": "object",
      "properties": {
        "total_records": {
          "type": "integer",
          "minimum": 0
        },
        "individuals": {
          "type": "integer",
          "minimum": 0
        },
        "entities": {
          "type": "integer",
          "minimum": 0
        },
        "vessels": {
          "type": "integer",
          "minimum": 0
        },
        "aircraft": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Aggregate counts from consolidated list"
    },
    "delta_from_previous": {
      "type": "object",
      "properties": {
        "previous_snapshot_digest": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "additions": {
          "type": "integer",
          "minimum": 0
        },
        "removals": {
          "type": "integer",
          "minimum": 0
        },
        "modifications": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Changes since the previous snapshot"
    },
    "digest_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "additionalProperties": true,
  "$defs": {
    "sanctions_source": {
      "type": "object",
      "required": ["url", "fetched_at"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Official source URL"
        },
        "fetched_at": {
          "type": "string",
          "format": "date-time"
        },
        "record_count": {
          "type": "integer",
          "minimum": 0
        },
        "digest_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "file_format": {
          "type": "string",
          "enum": ["xml", "json", "csv"]
        }
      },
      "additionalProperties": true
    }
  }
}
