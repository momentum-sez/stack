{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.dispute-claim.schema.json",
  "title": "MEZ Dispute Claim Verifiable Credential",
  "description": "A signed VC representing the filing of a dispute claim under a corridor's dispute resolution policy.",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZDisputeClaimCredential"
          }
        },
        "credentialSubject": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "required": [
            "type",
            "dispute_id",
            "corridor_id",
            "claimant_id",
            "respondent_id",
            "filed_at",
            "claim"
          ],
          "properties": {
            "type": {
              "const": "MEZDisputeClaim"
            },
            "dispute_id": {
              "type": "string"
            },
            "corridor_id": {
              "type": "string"
            },
            "claimant_id": {
              "type": "string"
            },
            "respondent_id": {
              "type": "string"
            },
            "filed_at": {
              "type": "string",
              "format": "date-time"
            },
            "head_commitment_digest_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "related_artifacts": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
              }
            },
            "evidence": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
              }
            },
            "forum": {
              "type": "object",
              "description": "Dispute resolution forum details.",
              "properties": {
                "jurisdiction_id": {"type": "string", "description": "Jurisdiction governing the forum."},
                "name": {"type": "string", "description": "Name of the dispute resolution body."},
                "rules_uri": {"type": "string", "description": "URI to the governing rules or policy document."}
              },
              "additionalProperties": false
            },
            "claim": {
              "type": "string"
            },
            "requested_relief": {
              "type": "string"
            },
            "meta": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      }
    }
  ]
}
