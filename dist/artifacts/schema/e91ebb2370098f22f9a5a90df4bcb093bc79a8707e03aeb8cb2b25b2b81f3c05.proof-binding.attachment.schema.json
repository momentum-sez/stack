{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/proof-binding.attachment.schema.json",
  "title": "MEZ Proof Binding Attachment",
  "description": "Typed ArtifactRef wrapper for proof bindings (artifact_type=proof-binding).",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "artifact_type": {
          "const": "proof-binding"
        },
        "purpose": {
          "type": "string",
          "description": "Optional purpose hint for this proof-binding (non-normative)."
        }
      },
      "required": [
        "artifact_type",
        "digest_sha256"
      ],
      "additionalProperties": true
    }
  ]
}
