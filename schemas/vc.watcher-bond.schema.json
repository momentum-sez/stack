{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.watcher-bond.schema.json",
  "title": "MEZ Watcher Bond Verifiable Credential",
  "description": "A signed VC representing a watcher bond (stake/escrow) posted by an observer who participates in monitoring corridors.",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZWatcherBondCredential"
          }
        },
        "credentialSubject": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "required": [
            "type",
            "bond_id",
            "watcher_id",
            "corridor_id",
            "amount",
            "currency",
            "posted_at"
          ],
          "properties": {
            "type": {
              "const": "MEZWatcherBond"
            },
            "bond_id": {
              "type": "string"
            },
            "watcher_id": {
              "type": "string",
              "description": "Watcher DID."
            },
            "corridor_id": {
              "type": "string"
            },
            "amount": {
              "type": "string",
              "description": "Bond amount as a decimal string."
            },
            "currency": {
              "type": "string"
            },
            "posted_at": {
              "type": "string",
              "format": "date-time"
            },
            "expires_at": {
              "type": "string",
              "format": "date-time"
            },
            "bond_artifact_ref": {
              "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
            },
            "terms_ref": {
              "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
            },
            "meta": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
