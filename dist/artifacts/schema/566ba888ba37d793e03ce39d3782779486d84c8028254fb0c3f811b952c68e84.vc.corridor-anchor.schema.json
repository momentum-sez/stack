{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.corridor-anchor.schema.json",
  "title": "MEZ Corridor Anchor Verifiable Credential",
  "description": "A signed VC asserting that a corridor head commitment has been anchored to an external chain (L1, notary log, etc).",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZCorridorAnchorCredential"
          }
        },
        "credentialSubject": {
          "$ref": "https://schemas.momentum-ez.org/mez/corridor.anchor.schema.json"
        }
      }
    }
  ]
}
