{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-sez.org/msez/corridor.anchor.schema.json",
  "title": "MSEZCorridorAnchor",
  "type": "object",
  "required": [
    "type",
    "corridor_id",
    "anchored_at",
    "head_commitment_digest_sha256",
    "chain"
  ],
  "properties": {
    "type": {
      "const": "MSEZCorridorAnchor"
    },
    "corridor_id": {
      "type": "string"
    },
    "anchored_at": {
      "type": "string",
      "format": "date-time"
    },
    "head_commitment_digest_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "checkpoint_ref": {
      "$ref": "https://schemas.momentum-sez.org/msez/artifact-ref.schema.json"
    },
    "chain": {
      "type": "object",
      "required": [
        "network"
      ],
      "properties": {
        "network": {
          "type": "string"
        },
        "chain_id": {
          "type": "string"
        },
        "tx_hash": {
          "type": "string"
        },
        "block_number": {
          "type": "integer",
          "minimum": 0
        },
        "block_hash": {
          "type": "string"
        },
        "block_timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "evidence": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.momentum-sez.org/msez/artifact-ref.schema.json"
      }
    }
  },
  "additionalProperties": true
}
