{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/corridor.settlement-plan.attachment.schema.json",
  "title": "MEZ Settlement Plan attachment",
  "description": "Typed attachment wrapper for a corridor settlement plan artifact. This is intended for inclusion in corridor receipt transitions (attachments).",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
    },
    {
      "properties": {
        "artifact_type": {
          "const": "settlement-plan"
        },
        "plan_id": {
          "type": "string",
          "minLength": 1
        },
        "currency_set": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "corridor_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Optional list of corridor_ids included in the plan inputs."
        }
      },
      "required": [
        "artifact_type",
        "digest_sha256"
      ],
      "additionalProperties": true
    }
  ],
  "unevaluatedProperties": false
}