{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.arbitration-award.schema.json",
  "title": "MEZ Arbitration Award Verifiable Credential",
  "description": "A signed VC representing an arbitration award or settlement outcome for a dispute claim.",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZArbitrationAwardCredential"
          }
        },
        "credentialSubject": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "required": [
            "type",
            "award_id",
            "dispute_id",
            "corridor_id",
            "issued_at",
            "outcome"
          ],
          "properties": {
            "type": {
              "const": "MEZArbitrationAward"
            },
            "award_id": {
              "type": "string"
            },
            "dispute_id": {
              "type": "string"
            },
            "corridor_id": {
              "type": "string"
            },
            "issued_at": {
              "type": "string",
              "format": "date-time"
            },
            "head_commitment_digest_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "forum": {
              "type": "object",
              "description": "Dispute resolution forum details.",
              "properties": {
                "jurisdiction_id": {"type": "string", "description": "Jurisdiction governing the forum."},
                "name": {"type": "string", "description": "Name of the dispute resolution body."},
                "rules_uri": {"type": "string", "description": "URI to the governing rules or policy document."}
              },
              "additionalProperties": false
            },
            "outcome": {
              "type": "object",
              "description": "Arbitration outcome details.",
              "properties": {
                "status": {"type": "string", "enum": ["awarded", "dismissed", "settled", "withdrawn"], "description": "Result status of the arbitration."},
                "ruling_summary": {"type": "string", "description": "Brief description of the ruling."},
                "relief_granted": {"type": "string", "description": "Description of the relief granted, if any."}
              },
              "additionalProperties": false
            },
            "obligations": {
              "type": "array",
              "items": {
                "type": "object",
                "description": "An obligation imposed by the arbitration award.",
                "properties": {
                  "obligor_id": {"type": "string", "description": "Entity that must fulfill the obligation."},
                  "obligation_type": {"type": "string", "description": "Category of obligation (e.g., payment, action, restraint)."},
                  "description": {"type": "string", "description": "Details of what must be fulfilled."},
                  "due_by": {"type": "string", "format": "date-time", "description": "Deadline for fulfillment."},
                  "amount": {"type": "string", "description": "Monetary amount if applicable."},
                  "currency": {"type": "string", "description": "Currency code if amount is specified."}
                },
                "additionalProperties": false
              }
            },
            "attachments": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
              }
            },
            "meta": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      }
    }
  ]
}
