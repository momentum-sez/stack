{
  "uid": "mez-corridor-health",
  "title": "MEZ Corridor Health",
  "description": "Corridor health monitoring for the MEZ Stack â€” receipt chains, HTTP metrics, compliance, and zone status.",
  "tags": ["mez", "corridor", "health"],
  "timezone": "browser",
  "refresh": "15s",
  "schemaVersion": 39,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "editable": true,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Corridor Receipt Chain Heights",
      "description": "Receipt chain height per corridor over time (one line per corridor).",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_corridor_receipt_chain_height",
          "legendFormat": "{{ corridor_id }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "axisLabel": "Height"
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 2,
      "title": "Total Receipts",
      "description": "Sum of receipts across all corridors.",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_receipt_chain_total_receipts",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "title": "Corridors by State",
      "description": "Distribution of corridors across lifecycle states (DRAFT, PENDING, ACTIVE, HALTED, SUSPENDED, DEPRECATED).",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 4, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_corridors_total",
          "legendFormat": "{{ state }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "legend": { "displayMode": "list", "placement": "right" },
        "pieType": "pie",
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 4,
      "title": "Attestation Count",
      "description": "Total attestation records in the zone.",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_attestations_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 5,
      "title": "HTTP Request Rate",
      "description": "Rate of HTTP requests to mez-api over 5-minute windows.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(mez_http_requests_total[5m]))",
          "legendFormat": "requests/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "axisLabel": "req/s"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 6,
      "title": "HTTP Error Rate",
      "description": "Rate of HTTP errors (4xx + 5xx) over 5-minute windows.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(mez_http_errors_total[5m]))",
          "legendFormat": "errors/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "axisLabel": "err/s"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 7,
      "title": "Request Latency p50 / p95 / p99",
      "description": "HTTP request latency percentiles from the histogram.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(mez_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(mez_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(mez_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "axisLabel": "Latency"
          },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 8,
      "title": "Asset Compliance Breakdown",
      "description": "Assets grouped by compliance status.",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_assets_total",
          "legendFormat": "{{ compliance_status }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "non_compliant" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "compliant" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "pending" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "id": 9,
      "title": "Peer Status Breakdown",
      "description": "Distribution of corridor peers by connection status.",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_peers_total",
          "legendFormat": "{{ status }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "legend": { "displayMode": "list", "placement": "right" },
        "pieType": "pie",
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 10,
      "title": "Zone Key Ephemeral Warning",
      "description": "Shows 1 (red) when the zone signing key is ephemeral (dev mode). 0 (green) when a real key is loaded.",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "mez_zone_key_ephemeral",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Real Key", "color": "green" }, "1": { "text": "EPHEMERAL", "color": "red" } } }
          ],
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none"
      }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "links": []
}
