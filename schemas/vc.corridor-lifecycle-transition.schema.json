{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.corridor-lifecycle-transition.schema.json",
  "title": "MEZ Corridor Lifecycle Transition Verifiable Credential",
  "description": "A signed lifecycle transition for a corridor instance (e.g., DRAFT \u2192 PENDING \u2192 ACTIVE \u2192 HALTED \u2192 DEPRECATED). See also SUSPENDED state for non-emergency pauses.",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZCorridorLifecycleTransitionCredential"
          }
        },
        "credentialSubject": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "required": [
            "type",
            "corridor_id",
            "from_state",
            "to_state",
            "transitioned_at"
          ],
          "properties": {
            "type": {
              "const": "MEZCorridorLifecycleTransition"
            },
            "transition_id": {
              "type": "string"
            },
            "corridor_id": {
              "type": "string"
            },
            "from_state": {
              "type": "string"
            },
            "to_state": {
              "type": "string"
            },
            "transitioned_at": {
              "type": "string",
              "format": "date-time"
            },
            "reason": {
              "type": "string"
            },
            "policy_ref": {
              "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
            },
            "meta": {
              "type": "object",
              "additionalProperties": true
            },
            "evidence": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
              },
              "description": "Optional evidence references (ArtifactRefs, typically artifact_type=vc) required by the corridor lifecycle policy/state machine."
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
