{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Experiment descriptor",
  "type": "object",
  "required": [
    "experiment_id",
    "hypothesis",
    "arms",
    "metrics"
  ],
  "properties": {
    "experiment_id": {
      "type": "string"
    },
    "hypothesis": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "arms": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": [
          "arm_id",
          "description"
        ],
        "properties": {
          "arm_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "overlays": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "parameters": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "metric_id list"
    },
    "safety": {
      "type": "object",
      "additionalProperties": true
    },
    "rollback": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
