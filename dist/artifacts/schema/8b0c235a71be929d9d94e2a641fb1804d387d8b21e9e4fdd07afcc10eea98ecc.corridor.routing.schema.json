{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-sez.org/msez/corridor.routing.schema.json",
  "title": "MSEZ Corridor Route",
  "description": "A suggested route plan through a set of corridors connecting a source node to a destination node. This is an output schema used by routing tools/APIs; it is not normative by default.",
  "type": "object",
  "required": [
    "type",
    "route_id",
    "from",
    "to",
    "hops",
    "computed_at"
  ],
  "properties": {
    "type": {
      "const": "MSEZCorridorRoute"
    },
    "route_id": {
      "type": "string"
    },
    "from": {
      "type": "string"
    },
    "to": {
      "type": "string"
    },
    "computed_at": {
      "type": "string",
      "format": "date-time"
    },
    "constraints": {
      "type": "object",
      "additionalProperties": true
    },
    "hops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "corridor_id"
        ],
        "properties": {
          "corridor_id": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "notes": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
