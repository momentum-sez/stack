{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.arbitration-award.schema.json",
  "title": "MEZ Arbitration Award Verifiable Credential",
  "description": "A signed VC representing an arbitration award or settlement outcome for a dispute claim.",
  "allOf": [
    {
      "$ref": "https://schemas.momentum-ez.org/mez/vc.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "credentialSubject"
      ],
      "properties": {
        "type": {
          "type": "array",
          "contains": {
            "const": "MEZArbitrationAwardCredential"
          }
        },
        "credentialSubject": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "required": [
            "type",
            "award_id",
            "dispute_id",
            "corridor_id",
            "issued_at",
            "outcome"
          ],
          "properties": {
            "type": {
              "const": "MEZArbitrationAward"
            },
            "award_id": {
              "type": "string"
            },
            "dispute_id": {
              "type": "string"
            },
            "corridor_id": {
              "type": "string"
            },
            "issued_at": {
              "type": "string",
              "format": "date-time"
            },
            "head_commitment_digest_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "forum": {
              "type": "object",
              "additionalProperties": true
            },
            "outcome": {
              "type": "object",
              "additionalProperties": true
            },
            "obligations": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "attachments": {
              "type": "array",
              "items": {
                "$ref": "https://schemas.momentum-ez.org/mez/artifact-ref.schema.json"
              }
            },
            "meta": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      }
    }
  ]
}
