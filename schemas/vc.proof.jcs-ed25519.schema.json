{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.momentum-ez.org/mez/vc.proof.jcs-ed25519.schema.json",
  "title": "MEZ JCS Ed25519 Proof",
  "type": "object",
  "required": [
    "type",
    "created",
    "verificationMethod",
    "proofPurpose",
    "jws"
  ],
  "properties": {
    "type": {
      "const": "MezEd25519Signature2025"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "verificationMethod": {
      "type": "string",
      "minLength": 1
    },
    "proofPurpose": {
      "type": "string",
      "minLength": 1
    },
    "jws": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
